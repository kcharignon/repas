{% extends '@Shared/base.html.twig' %}
{% block title %}Repas : Connexion{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Connexion</h1>

                <form method="POST" action="{{ path('view_login_email') }}">
                    <input type="hidden" name="_csrf_token" value="{{ csrfToken }}">

                    {# Champ Email #}
                    <div class="mb-3">
                        <label for="loginEmail" class="form-label">Adresse email</label>
                        <input
                            type="text"
                            name="email"
                            id="loginEmail"
                            class="form-control {% if error %}is-invalid{% endif %}"
                            value="{{ identifier }}"
                            required
                            autofocus
                        >
                        {% if error %}
                            <div class="invalid-feedback">
                                {# On peut réutiliser le message d'erreur global ici #}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                    </div>

                    {# Champ Password #}
                    <div class="mb-3">
                        <label for="loginPassword" class="form-label">Mot de passe</label>
                        <input
                            type="password"
                            name="password"
                            id="loginPassword"
                            class="form-control {% if error %}is-invalid{% endif %}"
                            required
                        >
                        {% if error %}
                            <div class="invalid-feedback">
                                {# Le même message ou un message distinct #}
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                    </div>

                    {# Bouton #}
                    <button type="submit" class="btn btn-primary w-100">
                        Se connecter
                    </button>
                </form>

                <a href="{{ path('view_registration') }}" class="mt-3 d-block text-center">S'inscrire</a>
            </div>
        </div>
    </div>
{% endblock %}
