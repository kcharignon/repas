<div id="shoppingListIngredientsColumn" class="col">
    <h2>Ingredients</h2>
    {% for department in shoppingList.departments %}
        {% set rows = shoppingList.rows %}
        {% if rows is not empty %}
            <ul class="list-group mb-1" id="shoppingListRows">
                <li class="d-flex list-group-item justify-content-start align-items-center active">
                    <img src="{{ absolute_url(asset(department.image)) }}" alt="{{ department.name }}" style="height: 1.5em">
                    <span class="ms-1">{{ department.name|capitalize }}</span>
                </li>
                {% for row in rows %}
                    {% if row.ingredient.department.isEqual(department) %}
                        {% include "@Repas/ShoppingList/_row.html.twig" %}
                    {% endif %}
                {% endfor %}
            </ul>
        {% endif %}
    {% endfor %}
</div>
