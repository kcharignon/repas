{% set name =  shoppingList.name is not null ? shoppingList.name : ("Liste du " ~ shoppingList.createdAt|format_datetime(locale='fr_FR', pattern="dd MMMM YYYY"))%}

<h3 id="shopping-list-card-header" class="card-header">
    <span id="card-header-name">{{ name }}</span>
    <div id="input-name-group" class="input-group" style="display: none;">
        <button
            id="btn-validate"
            type="input-group-text button"
            data-action="submit-input-ajax"
            data-selector="#card-header-input"
            class="btn btn-success btn-sm ms-1" >
            <i class="fas fa-check"></i>
        </button>
        <input
            id="card-header-input"
            type="text"
            class="form-control"
            data-method="post"
            data-url="{{ path("view_shopping_list_rename", {shoppingListId: shoppingList.id, newName: "__name__"}) }}"
            data-url-value="__name__"
            value="{{ shoppingList.name }}"
            data-value="{{ shoppingList.name }}"
        />
        <button
            id="btn-cancel"
            type="input-group-text button"
            class="btn btn-secondary btn-sm me-1" >
            <i class="fas fa-times"></i>
        </button>
    </div>
    <button
        id="btn-edit"
        type="button"
        class="btn btn-secondary btn-sm float-end me-1" >
        <i class="fas fa-pen"></i>
    </button>
</h3>
